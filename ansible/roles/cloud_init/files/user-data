#cloud-config
# yamllint disable rule:line-length
---
package_update: true
packages:
  - cloud-guest-utils
  - e2fsprogs

growpart:
  mode: auto
  devices:
    - "/"
  ignore_growroot_disabled: false
resize_rootfs: true

hostname: gighive
fqdn: gighive.mysettings.com

users:
  - name: ubuntu
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    lock_passwd: false
    ssh_authorized_keys:
      - 'ssh-rsa  sodo@pop-os'

ssh_pwauth: true

chpasswd:
  expire: false
  list:
    - ubuntu:yoboiboi

write_files:
  - path: /etc/hosts
    permissions: "0644"
    content: |
      127.0.0.1 localhost
      192.168.1.248 gighive.mysettings.com gighive
    append: true

runcmd:
  - [ "usermod", "--shell", "/bin/bash", "ubuntu" ]
  - [ "hostnamectl", "set-hostname", "gighive" ]
  - [ "growpart", "/dev/sda", "1" ]
  - [ "resize2fs", "/dev/sda1" ]
  - [ "systemctl", "enable", "--now", "ssh" ]
  - [ "sed", "-i", "s/^#\\?PasswordAuthentication.*/PasswordAuthentication no/", "/etc/ssh/sshd_config" ]
  - [ "sed", "-i", "s/^#\\?ChallengeResponseAuthentication.*/ChallengeResponseAuthentication no/", "/etc/ssh/sshd_config" ]
  - [ "sed", "-i", "s/^#\\?PermitRootLogin.*/PermitRootLogin no/", "/etc/ssh/sshd_config" ]
  - [ "systemctl", "restart", "ssh" ]

